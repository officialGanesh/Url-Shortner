<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <!-- Google-fonts -->
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Roboto+Mono:wght@1,400&display=swap');
    </style>

    <!-- Our-css -->
    <style>
        *{
            padding: 0px;
            margin: 0px;
            font-family: 'Roboto Mono', monospace;
            color: #fff;
            
        }
        body{
            background-color: #333;
        }
        .container{
            max-width: 55rem;
            text-align: center;
            margin-top: 8rem;
            
        }
        #makeUrlShort{
            margin: 1.3rem 0rem 0rem 0rem;
            width: 55rem;
            font-size: 1.5rem;
        }
        h1{
            margin-bottom: 2.3rem;
            font-size: 4rem;
            
        }
        h2{
            margin-bottom: 1.3rem;
            margin-top: 1.5rem;
            font-size: 2.3rem;
            
        }
    </style>

    <title>shortMyUrls</title>

</head>
<body>
    
    <div class="container">

        <h1>Url-Shortner</h1>
        <form action="shortUrl" method="POST">
            <input class="form-control form-control-lg" type="url" placeholder="Enter Url" name="fullUrl">
            <button class="btn btn-lg  btn-success " id="makeUrlShort">GO</button>
        </form>
        <h2>Available Short Urls ðŸš€</h2>
        <!-- Table -->
        <table class="table ">
            <thead>
              <tr>
                <th scope="col">Full</th>
                <th scope="col">Short</th>
                <th scope="col">Clicks</th>
              </tr>
            </thead>
            <tbody>
                <% shortUrls.forEach(shortUrl => {%>
                
                    <tr>
                      <td><a href=" <%= shortUrl.full %> "><%= shortUrl.full %> </a></td>
                      <td><a href=" <%= shortUrl.short %> "><%= shortUrl.short %> </a></td>
                      <td><%= shortUrl.clicks %></td>
                    </tr>
                
                <% }) %> 
                            
            </tbody>
          </table>

    </div>

</body>
</html>